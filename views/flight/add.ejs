<h1>Add Flight</h1>

<form action="/flight/add" method="post">
  <div>
    <label>Airline</label>
    <input type="text" name="airline" id="airline" placeholder="Airline" />
  </div>
  <div>
     <div>
    <label>Airport</label>
    <input type="text" name="airport" id="airport" value="DEN"/>
  </div>
  <div>
    <label>Flight Number</label>
    <input type="number" name="flightNo" id="flightNo" placeholder="Flight Number" />
  </div>
  <div>
    <label>Departs</label>
    <input type="datetime-local" name="departs" id="departs" value="2022-03-06T08:30"/>
  </div>


  <button type="submit">Create Flight</button>
</form>
